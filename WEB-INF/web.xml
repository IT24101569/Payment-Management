<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="3.1">
    <servlet>
        <servlet-name>CardPaymentServlet</servlet-name>
        <servlet-class>com.payment.CardPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CardPaymentServlet</servlet-name>
        <url-pattern>/cardPayment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CashPaymentServlet</servlet-name>
        <servlet-class>com.payment.CashPaymentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CashPaymentServlet</servlet-name>
        <url-pattern>/cashPayment</url-pattern>
    </servlet-mapping>
</web-app>
